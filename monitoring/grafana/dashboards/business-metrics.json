{
  "title": "GT-Vision - Business Metrics",
  "tags": ["gtvision", "business"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Active Streams",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "gtvision_active_streams",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Active Recordings",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "gtvision_recordings_active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Cameras Online",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "gtvision_cameras_online",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Cameras Offline",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "gtvision_cameras_offline",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "LPR Events/Hour",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "rate(gtvision_lpr_events_total[1h]) * 3600",
          "legendFormat": "LPR Events/Hour",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Recording Errors",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "rate(gtvision_recording_errors_total[5m])",
          "legendFormat": "Errors/sec",
          "refId": "A"
        }
      ]
    }
  ]
}
